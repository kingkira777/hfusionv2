.app-sidebar__overlay(data-toggle='sidebar')
aside.app-sidebar.toggle-sidebar
    .app-sidebar__user.pb-0
        .user-body
            span.avatar.avatar-xxl.brround.text-center.cover-image(data-image-src='../assets/images/users/female/33.png')
        .user-info
            a.ml-2(href='#')
                span.text-dark.app-sidebar__user-name.font-weight-semibold Jenna Side
                br
                span.text-muted.app-sidebar__user-name.text-sm  Web Designer
    .tab-menu-heading.siderbar-tabs.border-0.p-0
        .tabs-menu
            // Tabs
            ul.nav.panel-tabs
                li
                    a.active(href='#index1', data-toggle='tab')
                        i.fa.fa-home.fs-17
                li
                    a(href='#index2', data-toggle='tab')
                        i.fa.fa-envelope.fs-17
                li
                    a(href='#index3', data-toggle='tab')
                        i.fa.fa-user.fs-17
                li
                    a(href='login.html', title='logout')
                        i.fa.fa-power-off.fs-17
    .panel-body.tabs-menu-body.side-tab-body.p-0.border-0
        .tab-content
            #index1.tab-pane.active
                ul.side-menu.toggle-menu
                    li.slide
                        a.side-menu__item(data-toggle='slide', href='#')
                            i.side-menu__icon.typcn.typcn-device-desktop
                            span.side-menu__label Dashboard
                            i.angle.fa.fa-angle-right
                        ul.slide-menu
                            li
                                a.slide-item(href='index.html')
                                    span Dashboard 01
                            li
                                a.slide-item(href='index2.html')
                                    span Dashboard 02
                            li
                                a.slide-item(href='index3.html')
                                    span Dashboard 03
