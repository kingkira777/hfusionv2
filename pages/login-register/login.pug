        script(src='/assets/js/vendors/jquery-3.2.1.min.js')
        // Bootstrap.min js
        script(src='/assets/plugins/bootstrap/popper.min.js')
        script(src='/assets/plugins/bootstrap/js/bootstrap.min.js')
        // Jquery Sparkline js
        script(src='/assets/js/vendors/jquery.sparkline.min.js')
