extends ../../templates/layout

block content
    .page-header
        ol.breadcrumb
            // breadcrumb
            li.breadcrumb-item
                a(href='#') Home
            li.breadcrumb-item.active(aria-current='page')=title
        // End breadcrumb
        .ml-auto
            .input-group
                a(href="/patients/add-patient").btn.btn-primary.text-white.mr-2
                    span
                        i.fa.fa-plus
                        |  ADD NEW PATIENT
    

    .card.shadow
        .card-header.bg-transparent.border-0
            h3.card-title.mb-0 Patient List
        .card-body
            div
                .grid-margin
                    div
                        .table-responsive
                            table#patient-tableList.table.table-hover.table-striped(style="width:100%")
                                

block scripts 
    script(src="/js-page/patient.js")