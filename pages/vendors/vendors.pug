extends ../../templates/layout

block content
    .page-header
        ol.breadcrumb
            // breadcrumb
            li.breadcrumb-item
                a(href='/') Home
            li.breadcrumb-item.active(aria-current='page') HR
            li.breadcrumb-item.active(aria-current='page')=title
        // End breadcrumb
        .ml-auto
            .input-group
                a(href="/vendors/add-update").btn.btn-primary.text-white.mr-2
                    span
                        i.fa.fa-plus
                        |  ADD NEW VENDOR


    .card.shadow
        .card-header.bg-transparent.border-0
            h3.card-title.mb-0 Vendor List
        .card-body 
            .table-responsive
                table#vendor-table(style="width:100%;").table.table-hover.table-striped
                   

block scripts 
    script(src="/js-page/vendors.js")