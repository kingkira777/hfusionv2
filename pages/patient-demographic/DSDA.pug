.card
    .card-header
        h3.card-title Date of Service, Diagnosis & Allergies
        .card-options
            a.card-options-collapse(href='#', data-toggle='card-collapse')
                i.fe.fe-chevron-up
    .card-body
        form#dsda-form(action="/patient/"+patientid+"/dsda", method="post")
            .row 
                .col-md-3 
                    label(for="refdate").form-label Ref Date 
                    input(type="text" name="refdate").form-control.datePicker
                .col-md-3 
                    label(for="soc").form-label SOC 
                    input#soc(type="text" name="soc" required).form-control.datePicker
                .col-md-3 
                    label(for="recert").form-label  Re-Cert
                    input#recert(type="text" name="recert" required).form-control.datePicker
                .col-md-3 
                    label(for="eoc").form-label EOC 
                    input(type="text" name="eoc").form-control.datePicker
            
            .row 
                .col-md-8 
                    br
                    | Allergies: 
                    button.btn.btn-primary.btn-sm
                        i.fa.fa-plus
                        | New Allergy
                .col-md-4 
                    label(for="discharge_code").form-label Discharged Code 
                    select(name="discharge_code").form-control  
                        option(value="") Select-->

            hr 
            .row 
                .col-md-4 
                    label(for="admit_type").form-label Admit Type
                    select#admit-type(name="admit_type"  required).form-control  
                        option(value="") Select-->
                        option(value="New Admission") New Admission
                        option(value="Re-Admission") Re-Admission
                        option(value="Transfer From Another Hospice") Transfer From Another Hospice
                .col-md-2 
                    label(for="start_cert") Start Cert #
                    select#start-cert(name="start_cert" required).form-control
                .col-md-4 
                    label(for="transfer_from").form-label Transfer From
                    input(type="text" name="transfer_from").form-control
                .col-md-2 
                    label(for="cert_valid_to").form-label Cert Valid To
                    input(type="text" name="cert_valid_to" placeholder="MM/DD/YYYY").form-control.datePicker



            hr 
            .row 
                .col-md-8
                    label(for="primary_dx").form-label Primary Dx
                    input(type="text" name="primary_dx").form-control
                .col-md-4
                    label(for="primary_disease").form-label Disease
                    select(name="primary_disease").form-control  
                        option(value="") Select-->
                        each val,key in diseaseList
                            option(value=key)=val                        
            .row 
                .col-md-8
                    label(for="secondary_dx").form-label Secondary Dx
                    input(type="text" name="secondary_dx").form-control
                .col-md-4
                    label(for="secondary_disease").form-label Disease
                    select(name="secondary_disease").form-control  
                        option(value="") Select-->
                        each val,key in diseaseList
                            option(value=key)=val
            br 
            .row
                .col-md-12  
                    .alert.alert-info 
                        | COMORBIDITIES: 

            hr 
            .pull-right 
                button(type="submit").btn.btn-secondary 
                    i.fa.fa-save 
                    |   UPDATE
                


                