extends ../../templates/layout

block content
    .page-header
        ol.breadcrumb
            // breadcrumb
            li.breadcrumb-item
                a(href='/') Home
            li.breadcrumb-item.active(aria-current='page') HR
            li.breadcrumb-item.active(aria-current='page')=title
        // End breadcrumb
        .ml-auto
            .input-group
                a(href="/insurance/add-update-insurance").btn.btn-primary.text-white.mr-2
                    span
                        i.fa.fa-plus
                        |  ADD NEW INSURANCE
    

    .card.shadow
        .card-header.bg-transparent.border-0
            h3.card-title.mb-0 Insurance List
        .card-body
            div
                .grid-margin
                    div
                        .table-responsive
                            table#insurance-table.table.table-hover.table-striped(style="width:100%")
                            
                                


block scripts 
    script(src="/js-page/insurance.js")